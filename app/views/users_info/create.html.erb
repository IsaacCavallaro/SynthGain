<h1> create page </h1>
<%= simple_form_for(@user_info) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">      
    <p class="mt-3"><%= f.input :country %></p>
    <p class="mt-3"><%= f.input :city %></p>
    <p class="mt-3"><%= f.input :street%></p>
    <p class="mt-3"><%= f.input :post_code %></p>
    <p class="mt-3"><%= f.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %></p>  
    <%= f.button :submit, class:"btn btn-info btn-lg btn-block mt-3 mb-3 " %> 
  </div> 
<% end %>